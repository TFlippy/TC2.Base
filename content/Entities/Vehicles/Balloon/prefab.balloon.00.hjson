sound.emitter|"aux":
{
	file: "burner.gas.loop.02"
	volume: 0.300
	pitch: 0.500
	size: 1.000
	size_max_modifier: 0.500
}

air.vent|"exhaust":
{
	type: output
	offset: [0.250, -1.750]
	rotation: -1.571
	cross_section: 1.500
}

air.vent|"intake":
{
	type: input
	offset: [-0.125, 0.625]
	rotation: 1.571
	cross_section: 1.500
}

air.container:
{
	volume: 1.000
}

burner:
{
	flags: open_air
	type: gas
	height: 4.000
	area_fuel: 0.500
	area_aux: 0.004
	area_surface: 1.000
	volume_chamber: 0.500
	pressure_max: 8.000
	temperature_max: 2200.000
	insulation: 0.000
	airtightness: 0.000
	valve_strength: 3.000

	@sound.emitter:
	{
		file: "balloon.burner.loop.00"
		volume: 0.500
		pitch: 0.550
		size: 0.800
	}

	@animated.renderer:
	{
		sprite:
		{
			texture: "balloon.burner.00"
		}
		offset: [0.000, -1.875]
		z: -50.000
	}
}

burner.state:
{
	current_temperature: 300.000

	@inventory1:
	{
		stack_size_multiplier: 4.000
		filter_flags: fuel
		filter_type: liquid
		type: input
		flags: ignore_mass
		offset: [-0.250, 1.125]
	}
}

+slot.side|instance:
{
	joint.base:
	{
		offset_a: [0.000, -0.750]
		max_force: 15000.000
		max_torque: 5000.000
		max_stress: 3.000
		stress_threshold: 3.010
		flags: attachment, allow_dragging, control_read, control_write, facing_reset_rot, facing_reset_pos, force_facing
		z: 400.000
		material_type: metal
	}

	joint.pivot:
	{
		error_bias: 0.010
		max_bias: 4.000
		stress_mult: 0.500
	}

	joint.gear:
	{
		error_bias: 0.005
		max_bias: 4.000
		min: 0.000
		max: 0.000
		stress_mult: 0.200
	}

	attachment.slot:
	{
		name: "Mount (Side)"
		identifier: "side"

		flags: keyboard_write, mouse_write
		flags_editable: locked, disabled, hold, invert, keyboard_write, mouse_write, loose

		rank: -5.000
		gui_size: [128.000, 128.000]

		offset_bounds: [-1.000, -0.125, 1.000, 0.125]
	}

	facing:
	{
		flags: use_rotation
		offset: 0.000
		threshold: 0.050
		flip_interval: 0.500
	}
}

+slot.bottom|instance:
{
	joint.base:
	{
		offset_a: [0.000, 0.750]
		max_force: 150000.000
		max_torque: 45000.000
		max_stress: 3.000
		stress_threshold: 3.010
		stress_damp: 0.500
		z: -100.000
		material_type: metal
		stress: 0.000
		flags: attachment, allow_dragging, control_read, control_write, force_facing
	}

	// joint.pivot:
	// {
	// 	error_bias: 0.010
	// 	max_bias: 10.000
	// 	stress_mult: 0.500
	// }

	joint.piston:
	{
		error_bias: 0.000
		max_bias: 4.000
		stiffness: 15000.000
		damping: 750.000
		axis_force: 800000.000
		spring_max_bias: 4.000
		max_distance: 1.000
		rotation: 1.5707
		stress_mult_axis: 1.000
	}

	joint.gear:
	{
		error_bias: 0.001
		max_bias: 5.000
		min: 0.000
		max: 0.000
		stress_mult: 0.200
	}

	attachment.slot:
	{
		name: "Mount (Bottom)"
		identifier: "bottom"

		flags: use_center_of_gravity, keyboard_write, mouse_write
		flags_editable: use_center_of_gravity, locked, disabled, hold, invert, keyboard_read, keyboard_write, mouse_read, mouse_write, loose, offset, rotation, brake

		rank: 5.000
		gui_size: [0.000, 128.000]

		offset_bounds: [0.000, -0.750, 0.000, 0.250]
	}
}

+slot.balloon|instance:
{
	$tags: []

	joint.base:
	{
		offset_a: [0.000, -0.875]
		offset_b: [0.000, 4.250]
		max_force: 500000.000
		max_torque: 15000.000
		material_type: fabric
		flags: no_stress, allow_dragging
	}
	
	joint.dualrope:
	{
		distance_min: 1.000
		distance_max: 2.500
		error_bias: 0.005
		max_bias: 8.000
		stress_mult: 0.700
		gap_a: 3.000
		gap_b: 1.500
	}
	
	ropetest:
	{
		texture: "rope"
		thickness: 0.175
		scale: 4.000
	}

	+balloon|child:
	{
		$prefab: "balloon.envelope.00"
	}
}