	file: "balloon.burner.loop.00"
	volume: 0.500
	pitch: 0.550
	size: 0.800
}

sound.emitter|"aux":
{
	file: "burner.gas.loop.02"
	volume: 0.300
	pitch: 0.500
	size: 1.000
	size_max_modifier: 0.500
}

vent|"intake":
{
	type: input
	offset: [-0.125, 0.625]
}

vent|"exhaust":
{
	type: output
	offset: [0.250, -1.750]
}

burner:
{
	smoke_offset: [0.125, -3.250]
	smoke_direction: [0.986055, 0.166419]
	exhaust_offset: [0.125, -3.125]
	intake_offset: [-0.125, -1.875]
	flags: open_air
	type: gas
	height: 2.000
	area_intake: 4.000
	area_exhaust: 4.000
	area_fuel: 0.500
	area_aux: 0.020
	area_surface: 1.000
	volume_chamber: 0.500
	pressure_max: 8.000
	temperature_max: 2200.000
	insulation: 0.100
	combustion_efficiency: 0.900
	heating_efficiency: 0.530
	airtightness: 0.000
	valve_strength: 3.000
	filter_o2: 1.000
	filter_n2: 1.000
	filter_co2: 1.000
	supply_o2: 0.000
	supply_n2: 0.000
	supply_co2: 0.000

	// @inventory1:
	// {
	// 	stack_size_multiplier: 4.000
	// 	filter_flags: fuel
	// 	type: fuel
	// 	flags: allow_ducts, ignore_mass
	// 	offset: [-0.250, 1.125]
	// }

	@light:
	{
		color: [1.000, 0.500, 0.000, 2.000]
		offset: [0.000, -3.000]
		scale: [14.000, 13.000]
		intensity: 0.000
		texture: "light.circle.04"
	}

	@animated.renderer:
	{
		sprite:
		{
			texture: "balloon.burner.00"
		}
		offset: [0.000, -1.875]
		z: -50.000
	}
}

burner.state:
{
	current_temperature: 300.000

	@inventory1:
	{
		stack_size_multiplier: 4.000
		filter_flags: fuel
		filter_type: liquid
		type: input
		flags: ignore_mass
		offset: [-0.250, 1.125]
	}
}

