$name: "Balloon"
$desc:
	'''
	Basic hot-air balloon.
	'''
$tags: []

body:
{
	inventory_weight_multiplier: 0.750
	fall_damage_multiplier: 0.350

	@shape.polygon:
	{
		points:
		[
			[1.000, 1.000]
			[-1.000, 1.000]
			[-1.750, -1.000]
			[1.750, -1.000]
		]
		mass: 180.000
		friction: 0.450
		elasticity: 0.750
		material: wood
		layer: entity, solid, vehicle, flammable
		mask: world, solid, platform
		exclude: tree, wheel, creature, held
	}
}

health:
{
	max: 8000.000
}

animated.renderer:
{
	sprite:
	{
		texture: "balloon.bottom.00"
	}
	z: 91.000
}

control:
{

}

transform:
{

}

vehicle:
{

}

holdable:
{
	flags: disable_parent_facing, disable_control
	stress_multiplier: 0.500
}

norotate:
{
	rotation: 0.000
	bias: 0.500
	speed: 1.000
	multiplier: 3.000
	mass_multiplier: 4.000
	flags: none
}

storage:
{
	@inventory8:
	{
		name: "Balloon"
		stack_size_multiplier: 4.000
		type: storage
	}
}

interactable:
{
	window_size: [224.000, 256.000]
	window_offset: [-256.000, -128.000]
}

+seat|instance:
{
	$tags: []
	
	seat:
	{
		offset: [0.000, -0.875]
		max_tilt: 2.500
	}
}

