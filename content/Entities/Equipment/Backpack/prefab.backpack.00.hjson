{

}

attachment:
{
	force_multiplier: 1.000
	torque_multiplier: 1.000
	offset: [0.375, 0.375]
	// flags: mirror_rotate
	flags: none
	tags: small, utility, harness

	h_sound_attach: equip.00
	h_sound_detach: equip.01
}

