$name: "Backpack"
$desc:
	'''
	Baggy pack for your back.
	'''
$tags: []

body:
{
	inventory_weight_multiplier: 0.200

	@shape.line:
	{
		a: [-0.125, -0.250]
		b: [0.000, 0.250]
		offset: [0.000, 0.000]
		
		mass: 4.200
		radius: 0.625
		friction: 0.600
		elasticity: 0.100
		rigidity_dynamic: 0.750
		
		material: leather
		miss_chance: 0.608
		
		layer: entity, solid, item, storage, flammable
		mask: world
		exclude: none
	}
}

health:
{
	max: 7500.000
}

holdable:
{
	offset: [0.000, 0.000]
	flags: none
}

animated.renderer:
{
	sprite:
	{
		texture: "backpack.00"
		mask: "backpack.00.mask"
		size: [16, 16]
		frame: [0, 0]
	}
}

faction.colorable:
{
	intensity_a: 0.700
	intensity_b: 0.700
}

faction:
{

}

