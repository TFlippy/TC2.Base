$name: "Claw"
$desc: 
	'''
	Can pick up objects - especially useful on a crane.
	'''
$tags: []

body:
{
	fall_damage_multiplier: 0.250

	@shape.polygon:
	{
		points:
		[
			[-1.000, 0.125]
			[-1.000, -0.125]
			[0.750, -0.500]
			[0.750, 0.500]
		]
		radius: 0.350
		mass: 80.000
		friction: 0.650
		elasticity: 0.350
		material: metal
		layer: entity, solid, ignore_bullet
		mask: world
		exclude: item, vehicle
	}
}

control:
{

}

health:
{
	max: 10000.000
}

animated.renderer:
{
	sprite:
	{
		texture: "claw"
		size: [24, 24]
	}
	z: -100.000
}

claw:
{
	sound_attach: "claw.attach.00"
	sound_detach: "claw.detach.00"
	frame_attached: 1
	frame_detached: 0
}

transform:
{

}

// interactable:
// {

// }

holdable:
{
	// offset: [-1.000, 0.000]
	radius: 0.000
	torque_multiplier: 0.400
	stress_multiplier: 0.500
	flags: disable_parent_facing, disable_rotation, disable_control
}

attachment:
{
	offset: [-0.625, 0.000]
	radius: 0.000
	tags: medium, tool
}

