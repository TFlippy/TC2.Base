// 	speed: 3.000
// 	multiplier: 1.000
// 	mass_multiplier: 5.000
// }

+mount|instance:
{
	joint.base:
	{
		offset_a: [1.000, 0.000]
		max_force: 100000.000
		max_torque: 50000.000
		flags: no_wrap, no_aiming
		material_type: metal
	}

	joint.pivot:
	{
		max_bias: 8.000
		error_bias: 0.001
	}

	joint.gear:
	{
		max_bias: 3.000
		error_bias: 0.001
		rotation: -1.570
	}
}