$name: "Claw"
$desc: 
	'''
	Can pick up objects - especially useful on a crane.
	'''
$tags: []

body:
{
	fall_damage_multiplier: 0.250

	@shape.polygon:
	{
		points:
		[
			[-1.000, 0.125]
			[-1.000, -0.125]
			[0.750, -0.500]
			[0.750, 0.500]
		]
		radius: 0.350
		mass: 80.000
		friction: 0.250
		elasticity: 0.650
		material: metal_pole
		layer: entity, solid, ignore_bullet, item
		mask: world
		exclude: item, vehicle
	}
}

control:
{

}

health:
{
	max: 10000.000
}

animated.renderer:
{
	sprite:
	{
		texture: "claw"
		size: [24, 24]
	}
	z: -100.000
}

claw:
{
	sound_attach: "claw.attach.00"
	sound_detach: "claw.detach.00"
	frame_attached: 1
	frame_detached: 0
}

transform:
{

}

// interactable:
// {

// }

holdable:
{
	// offset: [-1.000, 0.000]
	radius: 0.000
	torque_multiplier: 0.400
	stress_multiplier: 0.500
	flags: disable_parent_facing, disable_rotation, disable_control
}

attachment:
{
	offset: [-1.000, 0.000]
	radius: 0.000
	tags: medium, tool, utility, rotary, coaxial
}

heat:
{
	temperature_medium: 520.000
	temperature_high: 700.000
	temperature_breakdown: 1350.000
	cool_rate: 1.000
	heat_capacity_extra: 30.000
	heat_damage_mult: 0.250
	cool_rate_mult: 1.100
	smoke_size_mult: 0.750
	smoke_speed_mult: 0.800
	smoke_offset: [0.000, 0.000]
	size: [3.500, 2.500]

	@light:
	{
		offset: [-0.125, 0.000]
		scale: [26.000, 34.000]
		intensity: 2.000
		texture: light.circle.00
	}
	
	@sound.emitter:
	{
		file: "overheat_loop"
		volume: 1.000
		pitch: 1.000
	}
}

