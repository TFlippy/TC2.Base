+mount|instance:
{
	joint.base:
	{
		offset_a: [0.500, 0.000]
		rotation_origin: -1.570
		max_force: 500000.000
		max_torque: 100000.000
		flags: no_aiming, no_wrap, allow_dragging, facing_reset_rot, facing_reset_pos
		material_type: metal
	}

	joint.pivot:
	{
		max_bias: 8.000
		error_bias: 0.001
	}

	joint.gear:
	{
		max_bias: 3.000
		error_bias: 0.001
	}

	grabber:
	{
		
	}
}