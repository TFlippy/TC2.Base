$name: "Claw"
$desc: 
	'''
	Can pick up objects - especially useful on a crane.
	'''
$tags: []

body:
{
	fall_damage_multiplier: 0.250

	@shape.polygon:
	{
		points: 
		[
			[-1.250, 0.125]
			[-1.250, -0.125]
			[1.000, -0.750]
			[1.000, 0.750]
		]
		radius: 0.250
		mass: 45.000
		friction: 0.750
		elasticity: 0.350
		material: metal
		layer: entity, solid
		mask: world
		exclude: item, vehicle
	}
}

control:
{

}

health:
{
	max: 10000.000
}

animated.renderer:
{
	sprite:
	{
		texture: "claw"
		count: 2
		size: [24, 24]
	}
	z: -100.000
}

claw:
{
	sound_attach: "claw.attach.00"
	sound_detach: "claw.detach.00"
	frame_attached: 1
	frame_detached: 0
}

transform:
{

}

interactable:
{

}

holdable:
{
	// offset: [-1.000, 0.000]
	radius: 0.000
	torque_multiplier: 0.200
	flags: disable_parent_facing, disable_rotation, disable_control
}

attachment:
{
	offset: [-1.000, 0.000]
	radius: 0.000
}

// norotate:
// {
