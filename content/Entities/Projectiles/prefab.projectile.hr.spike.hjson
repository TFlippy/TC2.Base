holdable:
{
	offset: [-0.500, 0.000]
	flags: disable_parent_facing
}

animated.renderer:
{
	sprite:
	{
		texture: atlas.projectile.hr
		size: [16, 15]
		frame: [0, 0]
	}
	scale: [0.900, 0.900]
}

transform:
{

}

sticky:
{
	max_force: 200000.000
	max_radius: 1.000
	flags: attach_on_collide
	mask: world, solid
	exclude: background, belt, pipe, door, conveyor, essence, water, fire, gas, powder, liquid, stored, dynamic
	sound: metal.impact.light.frame.00
}