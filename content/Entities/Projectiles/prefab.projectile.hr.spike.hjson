$tags: []

body:
{
	fall_damage_multiplier: 0.500

	@shape.line:
	{
		material: metal_solid
		miss_chance: 0.000
		flags: none
		tags: medium, thin, solid
		
		layer: entity, solid
		mask: world, solid
		exclude: creature, decoration, background, tree, resource, belt, pipe, conveyor, fire, gas, stored
		
		mass: 50.000
		radius: 0.375
		friction: 0.950
		elasticity: 0.050
		
		rigidity_static: 0.800
		rigidity_dynamic: 0.800
		cog_offset: [0.250, 0.000]
		
		a: [-0.625, 0.000]
		b: [0.000, 0.000]
		offset: [0.000, 0.000]
	}

