{
	species: "human"
	flags: no_kit_selection, no_kit_requirements
	max_kits: 2
	kit_default: "null"
	characters_capacity: 3
	characters_initial_count: 0
	repopulate_interval: 120.000
	repopulate_num: 1
	repopulate_num_extra: 0
	repopulate_max: 2
	kit_filter: 
	{
		require: none
		include: none
		exclude: none
	}
	character_flags_filter: 
	{
		require: none
		include: construction, farmer, laborer, armed, miner, hunter, soldier, nomad, brawler, outdoor, strong, lower_middle_class, middle_class
		exclude: upper_middle_class, upper_class, elite_class, sedentary
		weight: 1.000
	}
