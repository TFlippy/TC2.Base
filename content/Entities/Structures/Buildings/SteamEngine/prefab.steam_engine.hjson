$name: "Steam Engine (Zimrman)"
$desc:
	'''
	Standard Zimrman-design stationary steam engine.

	Originally introduced in 712 S.D.,
	this model is still widely used throughout Imperial lands, 
	owing to its ease of use and ability to run on almost any sort of fuel.
	'''
$tags: []

body:
{
	type: static
	
	@shape.polygon:
	{
		points:
		[
			[-3.500, -0.625]
			[3.625, -0.875]
			[4.000, 2.500]
			[-3.625, 2.500]
		]
		offset: [0.000, 0.000]
		mass: 990.000
		friction: 0.500
		elasticity: 0.500
		material: machine
		layer: entity, building, ignore_melee
		mask: world
	}
}

health:
{
	max: 78000.000
}

armor:
{
	toughness: 400.000
	protection: 0.750
	
	knockback_modifier: 1.300
	pain_modifier: 0.000

	material_type: metal_sheet
	flags: no_damage_type_conversion
}

animated.renderer:
{
	sprite:
	{
		texture: "steam_engine"
	}
	z: -280.000
}

steamengine:
{
	piston_offset: [-1.000, 0.125]
	steam_offset: [-2.875, -2.875]
	burst_offset: [0.750, 0.250]
	smoke_direction: [0.95505, -0.296445]
	steam_interval: 0.200
	crank_radius: 0.700
	speed_modifier: 0.750
	force: 25000.000
	volume_multiplier: 0.200
	pitch_multiplier: 0.400
	max_acceleration: 0.100
	speed_max: 20.000
	efficiency: 0.300
	bore_diameter: 0.150
	bore_depth: 0.350
	condenser: 0.900
	
	@animated.renderer:
	{
		sprite:
		{
			texture: "steam_engine_piston"
		}
		z: -290.000
	}

	@sound.emitter:
	{
		file: "steam_engine_loop"
		flags: start_muted
		volume: 1.000
		pitch: 1.000
		size: 2.000
		size_max_modifier: 0.800
	}
}

steamengine.state:
{
	
}

burner:
{
	smoke_offset: [-2.250, -1.375]
	smoke_direction: [0.580275, -0.814421]
	fuel_capacity: 0.800
	energy_loss: 100000.000
	efficiency: 0.400
	modifier_rate: 0.700
	air_intake_area: 0.007
	drain_multiplier: 8.000
	combustion_efficiency: 0.840
	heating_efficiency: 0.530
	volume_modifier: 1.000
	pitch_modifier: 0.600

	air_capacity: 1.000
	air_intake: 0.200
	
	@inventory1:
	{
		name: "Fuel"
		stack_size_multiplier: 4.000
		filter_flags: fuel
		type: fuel
		flags: allow_ducts, ignore_mass, no_auto_pickup
		offset: [-1.000, 1.500]
	}
	
	@sound.emitter:
	{
		file: "furnace_loop"
		flags: start_muted
		volume: 1.000
		pitch: 0.500
		size: 0.700
		size_max_modifier: 0.600
	}
}

burner.state:
{
	current_temperature: 300.000
}

axle:
{
	offset: [2.750, 0.000]
	mass: 1000.000
	friction: 0.200
	radius_a: 1.000
	radius_b: 1.000
	radius_inner: 0.750
	radius_outer: 1.000
	z: -280.000
	
	@animated.renderer:
	{
		sprite:
		{
			texture: "steam_engine_flywheel"
		}
		z: -280.000
	}
}

transform:
{

}

interactable:
{
	window_size: [320.000, 192.000]
}

boiler:
{
	pressure_max: 20.000

	exhaust_offset: [-1.500, -0.125]

	tank_volume: 1.000
	mass_tank: 40.000
	area_surface: 3.900
	area_heater: 0.800
	h_material_surface: "copper.ingot"
	h_material_heater: "steel.ingot"
}

boiler.state:
{
	water_moles: 1000.000

	@sound.emitter:
	{
		file: "tractor.steam.loop.00"
		flags: start_muted
		volume: 1.000
		pitch: 1.000
		size: 1.000
		size_max_modifier: 0.870
	}
}

