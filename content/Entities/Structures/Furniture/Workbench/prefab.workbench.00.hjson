$name: "Workbench"
$desc:
	'''
	Simple wooden workbench equipped with basic tools.
	'''
$tags: []

body:
{
	inventory_weight_multiplier: 0.800
	fall_damage_multiplier: 15.000
	
	@shape.polygon:
	{
		points:
		[
			[-1.125, -0.375]
			[1.375, -0.500]
			[1.375, 1.125]
			[-1.500, 1.125]
		]
		
		mass: 78.000
		radius: 0.350
		friction: 0.950
		elasticity: 0.400
		material: wood
		
		layer: entity, solid, furniture, flammable, ignore_melee, background, storage, flammable

		miss_chance: 0.890
	}
}

health:
{
	max: 8000.000
}

