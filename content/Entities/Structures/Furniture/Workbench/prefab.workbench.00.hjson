animated.renderer:
{
	sprite:
	{
		texture: "workbench.00"
		size: [32, 24]
	}
	z: -120.000
	flags: has_damage
}

damage.effects:
{
	frame_count: 2
	threshold_wreck: 0.500
}

transform:
{

}

holdable:
{
	force_multiplier: 0.750
	torque_multiplier: 0.050
	stress_multiplier: 0.150
	radius: 0.000
	priority: -3.000
	flags: disable_parent_facing, disable_rotation, disable_control
}

