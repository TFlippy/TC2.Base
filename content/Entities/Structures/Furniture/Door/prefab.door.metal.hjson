	'''
$tags: []

body:
{
	type: static
	
	@shape.box:
	{
		size: [0.500, 3.000]
		offset: [0.000, 0.000]
		mass: 60.000
		friction: 0.750
		elasticity: 0.300
		material: metal
		layer: entity, solid, building, door, no_overlapped_placement
