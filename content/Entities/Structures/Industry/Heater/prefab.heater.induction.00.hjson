$tags: []

body:
{
	type: static

	@shape.line:
	{
		a: [-1.375, -1.375]
		b: [-1.500, 1.250]
		radius: 0.750
		
		material: metal
		
		layer: entity, building, solid
		mask: item, building
		exclude: held
	}

	@shape.polygon:
	{
		points:
		[
			[1.125, -1.625]
			[1.875, -1.000]
			[2.000, 1.625]
			[1.375, 1.625]
		]
		radius: 0.375
		
		material: machine
		
		layer: entity, building, solid
		mask: item, building
		exclude: held
	}
}

transform:
{

}

health:
{
	max: 18000.000
}

animated.renderer:
{
	sprite:
	{
		texture: heater.induction.00
	}
	z: 500.000
}

essencecontainer:
{
	stability: 0.900
	health_threshold: 0.500
	glow_modifier: 1.800
	flags: show_gui, allow_edit_rate

	@inventory1:
	{
		type: essence
		flags: ignore_mass
		stack_size_multiplier: 0.500
		
		filter:
		{
			require: small, pellet, solid
			include: none
			exclude: none
		}
		
		offset: [1.750, 0.500]
	}

	@sound.emitter:
	{
		volume: 0.500
		pitch: 100.000
		size: 0.350
		size_max_modifier: 0.700
		spread: 80.000
		offset: [1.625, -0.125]
	}

	@light:
	{
		offset: [1.700, -0.250]
		scale: [5.000, 8.000]
		texture: light.circle.04
	}
}

interactable:
{
	flags: none
	window_size: [504.000, 416.000]
	window_size_misc: [168.000, 0.000]
}

vehicle:
{
	// inventory_type: ammo
	// flags: include_misc_window
}

control:
{
	@net.synchronized:
	{
		interval: 0.000
	}
}

inductor:
{
	h_material_coil: copper.ingot
	coil_length: 6.000
	coil_thickness: 0.200

	@shape.line:
	{
		a: [0.125, -1.125]
		b: [0.125, 0.125]
		radius: 1.000
		rigidity_static: 0.000
		rigidity_dynamic: 0.000
		
		layer: entity, ignore_melee, ignore_bullet
		mask: world, solid, item
		flags: no_mass, no_body_overrides, no_inventory_mass
	}
}

heat:
{
	temperature_medium: 450.000
	temperature_high: 850.000
	temperature_critical: 1350.000
	cool_rate: 25.000
	heat_capacity_extra: 750.000
	flags: exclude_body_mass
	offset: [0.250, -0.125]
	smoke_offset: [0.250, -0.250]
	size: [2.250, 2.625]

	@light:
	{
		offset: [0.250, -0.500]
		scale: [25.000, 31.000]
		intensity: 2.000
		texture: light.circle.04
	}
	
	@sound.emitter:
	{
		file: distillery.loop.00
		volume: 1.000
		pitch: 1.000
		size: 1.400
		size_max_modifier: 1.500
	}
}

