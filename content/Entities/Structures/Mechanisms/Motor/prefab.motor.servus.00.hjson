harvestable:
{
	resources:
	[
		{
			material: "actuator"
			flags: no_conversion, drop_on_break
			quantity: 2.000
		}
	]
}

essence.container:
{
	h_essence: "motion"
	available: 40.000
	rate: 0.000
	stability: 0.750
	health_threshold: 0.800
	emit_type: cycler
}

vibrate:
{
	rotation_mult: 0.030
	position_mult: [0.040, 0.010]
	flags: shared
}