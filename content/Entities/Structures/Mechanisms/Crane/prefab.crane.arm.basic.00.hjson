interactable_data:
{
	window_size: [192.000, 136.000]
	window_offset: [0.000, 0.000]
	flags: none
}

resizable:
{
	cap_a:
	{
		texture: "crane.arm.basic.cap.00"
		size: [24, 16]
		frame: [0, 0]
	}
	
	cap_b:
	{
		texture: "crane.arm.basic.cap.00"
		size: [24, 16]
		frame: [1, 0]
	}
	
	a: [0.000, 0.000]
	b: [6.000, 0.000]
	cap_offset: 0.000
}

vehicle:
{

}

+mount|instance:
{
	joint.base:
	{
		offset_a: [4.000, 0.000]
		max_force: 1000000.000
		max_torque: 10000.000
		flags: no_wrap, control_write, force_facing
		material_type: metal
	}

	joint.pivot:
	{
		error_bias: 0.01
		max_bias: 40.000
	}

	joint.motor:
	{
		force: 10.000
		speed: 0.000
		error_bias: 0.500
	}

	joint.rotarylimit:
	{
		max_torque: 500000.000
		min: -3.926
		max: 0.785
		max_bias: 20.000
		error_bias: 0.0001
	}

	joint_motor:
	{
		force: 100.000
		speed: 0.000
		error_bias: 0.000
	}

	attachment.slot:
	{
		name: "Mount"

		flags: keyboard_write, mouse_write
		flags_editable: keyboard_write, mouse_write
	}
}
