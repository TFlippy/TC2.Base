$name: "Crane Arm (Wood)"
$desc:
	'''
	Basic wooden crane arm with an attachment slot.
	'''
	
$tags: []

body:
{
	@shape.line:
	{
		a: [-4.000, 0.000]
		b: [4.000, 0.000]
		mass: 40.000
		radius: 0.500
		friction: 0.950
		elasticity: 0.100
		material: wood
		layer: entity, solid, flammable
		mask: world
	}
}

animated.renderer:
{
	sprite:
	{
		texture: "crane.arm.basic.00"
	}
	z: 100.000
}

health:
{
	max: 7000.000
}

control:
{

}

holdable:
{
	offset: [0.000, 0.000]
	radius: 0.000
	stress_multiplier: 0.500
	flags: disable_parent_facing, disable_rotation, disable_control
}

transform:
{

}

aimable:
{

}

attachment:
{
	offset: [0.000, 0.000]

	force_multiplier: 1.000
	torque_multiplier: 1.000

	tags: medium, tool, rotary, mount
}

