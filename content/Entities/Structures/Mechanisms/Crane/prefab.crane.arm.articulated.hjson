$name: "Crane Arm (Articulated)"
$desc:
	'''
	An advanced crane arm capable of more complex movement via ARC-MT rotary joints.
	'''
$tags: []

body:
{
	@shape.line:
	{
		a: [-4.000, 0.000]
		b: [4.000, 0.000]
		mass: 250.000
		radius: 0.500
		friction: 0.950
		elasticity: 0.100
		material: metal
		layer: entity, solid
		mask: world
	}
}

animated.renderer:
{
	sprite:
	{
		texture: "crane.arm.articulated"
	}
	z: 100.000
}

control:
{

}

holdable:
{
	offset: [-4.000, 0.000]
	radius: 0.000
	flags: disable_parent_facing, disable_control
}

transform:
{

}

crane:
{
	length_a: 8.000
	length_b: 8.000
	speed: 0.800

	flags: none
	flags_editable: inverted, hold
}

crane.state:
{

}

attachment:
{
	offset: [-4.000, 0.000]

	force_multiplier: 2.000
	torque_multiplier: 2.000
}

joint.base:
{
	offset_a: [4.000, 0.000]
	max_force: 10000000.000
	max_torque: 200000.000
	flags: no_wrap, no_stress, control_write, force_facing

	@light:
	{
		color: [0.000, 1.000, 1.000, 3.000]
		offset: [4.000, 0.000]
		scale: [6.000, 4.000]
		intensity: 1.000
		texture: "essence.glow"
	}
}

joint.pivot:
{
	error_bias: 0.01
	max_bias: 100.000
}

joint.gear:
{
	error_bias: 0.01
	max_bias: 2.000
	min: -30.000
	max: 30.000
}

attachment.slot:
{
	flags: keyboard_write, mouse_write
}

sound.emitter:
{
	file: "essence_motor.loop.00"
	volume: 0.000
	pitch: 1.000
}

sound.mixer:
{
	volume_modifier: 1.000
	pitch_modifier: 0.400
	volume_min: 0.000
	pitch_min: 0.500
	volume_lerp_a: 0.100
	volume_lerp_b: 0.200
	pitch_lerp_a: 0.100
	pitch_lerp_b: 0.050
}

interactable:
{
	window_size: [192.000, 96.000]
	window_offset: [0.000, 192.000]
}
