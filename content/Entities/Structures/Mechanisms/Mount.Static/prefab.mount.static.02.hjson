$name: "Mount (Static, Rotary)"
$tags: []

body:
{
	type: static
	
	@shape.polygon:
	{
		points: 
		[
			[-1.000, 0.000]
			[1.000, 0.000]
			[2.375, 2.125]
			[-2.375, 2.125]
		]
		mass: 850.000
		radius: 0.375
		friction: 0.500
		elasticity: 0.500
		material: metal
		layer: entity, solid, building, ignore_melee
	}

	@shape.circle:
	{
		offset: [0.000, -1.000]
		mass: 500.000
		radius: 1.250
		friction: 0.500
		elasticity: 0.500
		material: metal
		layer: entity, solid, building, ignore_melee
	}
}

control:
{

}

health:
{
	max: 95000.000
}

