$tags: []

body:
{
	inventory_weight_multiplier: 0.250

	@shape.polygon:	
	{
		points:
		[
			[1.500, 1.000]
			[-1.500, 1.000]
			[-0.750, -1.500]
			[0.500, -1.500]
		]
		offset: [0.000, 0.000]
		radius: 0.250
		mass: 500.000
		friction: 0.750
		elasticity: 0.750
		material: metal
		layer: entity, solid
		mask: world
	}
}

health:
{
	max: 15000.000
}

holdable:
{
	radius: 0.000
	flags: disable_parent_facing, disable_pickup_offset
}

attachable:
{
	offset: [0.000, 0.000]
}

animated.renderer:
{
	sprite:
	{
		texture: "cab.metal.01"
	}
	offset: [0.000, 0.000]
	z: -100.000
}

transform:
{

}

interactable:
{
	window_size: [182.000, 240.000]
	window_offset: [0.000, 192.000]
}

storage:
{
	@inventory4:
	{
		name: "Cargo"
		stack_size_multiplier: 4.000
		type: storage
		flags: allow_ducts
	}
}

control:
{

}

threat:
{

}

vehicle:
{
	@animated.renderer:
	{
		sprite:
		{
			texture: "cab.metal.fg.01"
		}
		z: 10.000
	}
}

+seat|instance:
{
	$tags: []
	
	seat:
	{
		offset: [-0.250, 0.125]
		max_tilt: 5.000
	}
}

+mount|instance:
{
	joint.base:
	{
		offset_a: [-0.250, -1.000]
		max_force: 200000.000
		max_torque: 25000.000
		flags: no_stress, control_write, force_facing
		z: 0.000

		@sound.emitter:
		{
			file: "attachment_rotate_loop_00"
			volume: 0.000
			pitch: 1.000
		}
		
		@sound.mixer:
		{
			volume_modifier: 1.000
			pitch_modifier: 0.250
			volume_min: 0.000
			pitch_min: 0.700
			volume_lerp_a: 0.020
			volume_lerp_b: 0.100
			pitch_lerp_a: 0.040
			pitch_lerp_b: 0.010
		}
	}

	joint.pivot:
	{
		error_bias: 0.01
		max_bias: 10.000
	}

	joint.gear:
	{
		error_bias: 0.01
		max_bias: 1.500
		min: -1.000
		max: 0.500
	}

	attachment:
	{
		name: "Mount"

		flags: keyboard_write, mouse_write
		flags_editable: locked, disabled, hold, invert, keyboard_read, mouse_read, keyboard_write, mouse_write
	}
}