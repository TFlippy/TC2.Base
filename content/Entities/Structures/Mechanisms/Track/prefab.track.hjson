$name: "Track"
$tags: []

body:
{
	type: static
	
	@shape.line:
	{
		a: [-1.000, 0.000]
		b: [1.000, 0.000]
		offset: [0.000, 0.000]
		mass: 25.000
		radius: 0.400
		friction: 0.500
		elasticity: 0.500
		material: metal
		layer: entity, ignore_melee
		mask: none
	}
}

health:
{
	max: 50000.000
}

animated.renderer:
{
	sprite:
	{
		texture: "track"
	}
	z: -200.000
}

transform:
{

}

resizable:
{
	cap_a:
	{
		texture: "track.cap"
	}
	
	cap_b:
	{
		texture: "track.cap"
	}
	
	flags: mirror_cap_b
	
	a: [0.000, 0.000]
	b: [10.000, 0.000]
	cap_offset: 1.000
}

track:
{
	@animated.renderer:
	{
		sprite:
		{
			texture: "track.mover"
		}
		z: -190.000
	}
}

track.state:
{

}

interactable:
{
	window_size: [400.000, 264.000]
}

control:
{

}

mount:
{

}

+mount|instance:
{
	attachment.slot:	
	{
		name: "Mount"

		flags: keyboard_write, mouse_write
		flags_editable: locked, disabled, hold, invert, keyboard_read, mouse_read, keyboard_write, mouse_write
	}

	joint.base:
	{
		offset_a: [0.000, 0.000]
		max_force: 100000.000
		max_torque: 200000.000
		flags: control_read, control_write, no_stress, no_wrap, force_facing
		// flags: control_read, control_write
	}

	joint.gear:
	{
		error_bias: 0.0001
		max_bias: 2.000

		// @sound.emitter:
