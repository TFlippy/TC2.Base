		// }
	}

	joint.slider:
	{
		a: [0.000, 0.000]
		b: [10.000, 0.000]

		min: 0.000
		max: 10.000

		error_bias: 0.000
		max_force_b: 0.000
		max_force_b: 1000000.000
		max_bias: 20.000
	}

	joint.distance:
	{
		max_force: 200000.000
		max_bias: 5.000

		@sound.emitter:
		{
			file: "track.move.loop.00"
			volume: 0.000
			pitch: 1.000
			size: 0.750
		}
		
		@sound.mixer:
		{
			volume_modifier: 0.700
			pitch_modifier: 0.250
			volume_min: 0.000
