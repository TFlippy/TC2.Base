$name: "Turret (Coaxial)"
$desc:
	'''
	Light metal turret with a coaxial attachment slot and a gunner seat.
	'''
$tags: []

body:
{
	@shape.line:	
	{
		a: [0.000, 0.000]
		b: [0.375, 0.000]
		radius: 1.125
		mass: 80.000
		friction: 0.750
		elasticity: 0.450
		material: metal
		layer: entity, solid, vehicle
		mask: world
	}
}

health:
{
	max: 13000.000
}

armor:
{
	toughness: 900.000
	protection: 0.800
	
	knockback_modifier: 1.300
	pain_modifier: 0.000

	material_type: metal
	flags: no_damage_type_conversion
}

holdable:
{
	radius: 0.000
	flags: disable_parent_facing, disable_pickup_offset, disable_control
	stress_multiplier: 0.500
}

attachment:
{
	offset: [0.000, 0.000]
}

aimable:
{

}

animated.renderer:
{
	sprite:
	{
		texture: "turret.00"
	}
	offset: [0.000, 0.000]
	z: -100.000
}

transform:
{

}

interactable:
{
	window_size: [182.000, 240.000]
	window_offset: [0.000, 192.000]
}

mount:
{
	@animated.renderer:
	{
		sprite:
		{
			texture: "turret.fg.00"
		}
		z: 100.000
	}
}

storage:
{
	@inventory1:
	{
		stack_size_multiplier: 10.000
		type: ammo
		flags: allow_ducts, no_auto_pickup

		filter:
		{
			require: ammo
			exclude: gas
		}
	}
}

control:
{

}

threat:
{

}

vehicle:
{

}

+seat|instance:
{
	$tags: []
	
	seat:
	{
		offset: [0.000, 0.000]
		flags: crouch, covered
		max_tilt: 5.000
		damage_mult: 0.160
		stun_mult: 0.150
	}
}

+mount|instance:
{
	joint.base:
	{
		offset_a: [0.500, 0.000]
		max_force: 100000.000
		max_torque: 200000.000
		z: 90.000
		flags: control_write, no_wrap, force_facing, attachment
		material_type: metal
	}

	joint.pivot:
	{
		max_bias: 8.000
	}

	joint.gear:
	{
		min: -0.150
		max: 0.150
		error_bias: 0.0010
		max_bias: 8.000
	}

	attachment.slot:
	{
		name: "Mount"

		flags: use_center_of_gravity, keyboard_write, mouse_write, manual_aim
		flags_editable: locked, disabled, invert, manual_aim, offset

		offset_bounds: [0.000, 0.000, 1.500, 0.000]
	}
}