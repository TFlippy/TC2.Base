$tags: []

body:
{
	type: static
	
	@shape.line:
	{
		a: [-1.000, 0.000]
		b: [1.000, 0.000]
		mass: 10.000
		radius: 0.500
		friction: 0.990
		elasticity: 0.700
		material: metal
		layer: entity, conveyor, ignore_melee
		mask: world
	}
}

conveyor:
{
	interval: 0.500

	throughput_min: 1.000
	throughput_max: 5.000

	sound: "conveyor.move.04"
	sound_volume: 0.000

	filter:
	{
		exclude: granular
	}
}

conveyor.state:
{

}

animated.renderer:
{
	sprite:
	{
		texture: "conveyor.roller"
	}
	z: -200.000
}

resizable:
{
	cap_a:
	{
		texture: "conveyor.roller.cap"
	}
	
	cap_b:
	{
		texture: "conveyor.roller.cap"
	}
	
	flags: mirror_cap_b, dynamic, orthogonal
	
	a: [0.000, 0.000]
	b: [10.000, 0.000]
	cap_offset: 0.000
}

axle:
{
	offset: [0.500, 0.000]
	mass: 3.000
	friction: 0.200
	radius_a: 0.500
	radius_b: 0.500
	radius_inner: 0.250
	radius_outer: 0.500
	z: -50.000

	@animated.renderer:
	{
		sprite:
		{
			texture: "wheel_0500.steel"
		}
		z: -150.000
	}

	@sound.emitter:
	{
		file: "conveyor.loop.00"
		volume: 0.000
		pitch: 1.000
		size: 1.000
		size_max_modifier: 0.800
	}
	
	@sound.mixer:
	{
		volume_modifier: 1.000
		pitch_modifier: 0.500
		volume_min: 0.000
		pitch_min: 1.000
		volume_lerp_a: 0.250
		volume_lerp_b: 0.500
		pitch_lerp_a: 0.250
		pitch_lerp_b: 0.500
	}
}

transform:
{

}

dismantlable:
{

}