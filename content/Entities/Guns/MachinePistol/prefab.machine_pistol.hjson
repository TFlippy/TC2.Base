{

}

control:
{

}

aimable:
{

}

holdable:
{
	offset: [-0.300, 0.000]
	radius: 4.000
	flags: storable
	hints: gun, small

	force_multiplier: 0.400
	torque_multiplier: 0.400
}

animated.renderer:
{
	sprite:
	{
		texture: "machine_pistol"
	}
	scale: [0.900, 0.900]
}

health:
{
	max: 2500.000
}

transform:
{

}

packable:
{

}

heat:
{
	temperature_medium: 520.000
	temperature_high: 700.000
	temperature_breakdown: 1350.000
	cool_rate: 0.250
	heat_capacity_extra: 5.000
	heat_capacity_mult: 1.500

	@light:
	{
		color: [1.000, 0.400, 0.100, 2.000]
		offset: [0.000, 0.000]
		scale: [16.000, 16.000]
		intensity: 0.000
		texture: "light.circle.00"
	}
	
	@sound.emitter:
	{
		file: "overheat_loop"
		flags: start_muted
		volume: 1.000
		pitch: 1.000
	}
}