$name: "LMG"
$desc:
	'''
	Light machine gun capable of firing high-powered rounds.
	'''
$tags: []

body:
{
	@shape.line:
	{
		a: [-0.750, 0.150]
		b: [0.750, -0.050]
		mass: 18.000
		radius: 0.350
		friction: 0.900
		elasticity: 0.250
		material: metal
		layer: entity, solid, ignore_bullet, ignore_melee, item
		mask: world
	}
}

gun:
{
	muzzle_offset: [1.375, -0.250]
	sound_shoot: "machine_gun_shoot"
	sound_reload: "machine_gun_reload"
	sound_dist_multiplier: 4.000
	velocity_multiplier: 660.000
	jitter_multiplier: 2.200
	damage_multiplier: 3.000
	recoil_multiplier: 0.280
	reload_interval: 2.500
	cycle_interval: 0.120
	failure_rate: 0.003
	max_ammo: 30.000
	projectile_count: 1
	flags: automatic, full_reload, cycle_on_shoot
	ammo_filter: ammo_mg
	action: blowback
	type: machinegun
	feed: drum

	heuristic_range: 30.000

	shake_amount: 0.250
	flash_size: 0.850

	@inventory1:
	{
		name: "Ammo"
		stack_size_multiplier: 1.000
		type: ammo
		flags: hidden, ignore_mass
	}
	
	@light:
	{
		color: [1.000, 0.400, 0.100, 2.000]
		offset: [1.000, -0.250]
		scale: [30.000, 20.000]
		intensity: 0.000
		texture: "light.circle.00"
	}
}

