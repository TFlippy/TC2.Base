	max_ammo: 50.000
	projectile_count: 1
	flags: automatic, full_reload, cycle_on_shoot
	ammo_filter: ammo_mg
	action: blowback
	type: machinegun
	feed: drum

	heuristic_range: 30.000
	stability: 3850.000

	shake_amount: 0.400
	
	@inventory1:
	{
		name: "Ammo"
		stack_size_multiplier: 1.000
		type: ammo
		flags: hidden, ignore_mass
