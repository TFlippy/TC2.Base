	jitter_multiplier: 0.800
	recoil_multiplier: 1.360
	reload_interval: 2.500
	cycle_interval: 0.085
	stability: 3750.000
	failure_rate: 0.0014
	
	ammo_filter: ammo_mg
	max_ammo: 50.000
	
	action: gas
	type: machinegun
	feed: drum
	
	flags: automatic, full_reload, cycle_on_shoot
	heuristic_range: 36.000

	@inventory1:
	{
		stack_size_multiplier: 1.000
		type: ammo
		flags: hidden, ignore_mass, no_auto_pickup

		filter:
		{
			require: ammo
			exclude: gas
		}
	}
	
	@light:
	{
		color: [1.000, 0.400, 0.100, 2.000]
		offset: [2.000, -0.125]
		scale: [30.000, 20.000]
		intensity: 0.000
		texture: "light.circle.00"
	}
}

