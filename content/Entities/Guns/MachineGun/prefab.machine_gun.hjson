$name: "HMG"
$desc:
	'''
	Heavy machine gun.
	
	Very heavy and difficult to handle, usually wielded by giants or placed on mounts.
	'''
$tags: []

body:
{
	buoyancy: 0.060

	@shape.line:
	{
		material: metal_solid
		miss_chance: 0.000
		flags: none
		tags: none
		
		layer: entity, solid, item, ignore_melee, ignore_bullet
		mask: world
		exclude: none
		
		mass: 76.000
		radius: 0.500
		friction: 0.720
		elasticity: 0.560
		
		cog_offset: [-0.625, 0.0625]
		
		a: [-1.375, 0.250]
		b: [1.375, 0.000]
		offset: [0.000, 0.000]
	}
}

gun:
{
	muzzle_offset: [1.875, -0.125]
	receiver_offset: [-0.750, -0.250]
	
	eject_direction: [-5.600, -9.700]
