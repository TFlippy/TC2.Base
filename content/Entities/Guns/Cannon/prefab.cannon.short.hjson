$name: "Short Cannon"
$desc: 
	'''
	A short cannon based on an antiquated imperial cannon model, 
	which is cheaper, lighter and of worse performance.
	'''
$tags: []

body:
{
	fall_damage_multiplier: 0.500

	@shape.line:
	{
		a: [-2.000, 0.000]
		b: [1.875, -0.150]
		mass: 260.000
		radius: 0.500
		friction: 0.800
		elasticity: 0.250
		material: metal
		layer: entity, solid, ignore_bullet, ignore_melee, item
		mask: world
	}
}

