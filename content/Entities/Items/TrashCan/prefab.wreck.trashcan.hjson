$name: "Trashed Trash Can"
$desc:
	'''
	Someone had a heap of fun with this.
	Maybe it contains some ancient treasure?
	'''
$tags: []

body:
{
	@shape.box:
	{
		size: [1.200, 1.700]
		offset: [0.000, 0.000]
		mass: 5.000
		friction: 0.750
		elasticity: 0.600
		material: metal
		layer: entity, solid, ignore_bullet
		mask: world
	}
}

health:
{
	max: 700.000
}

holdable:
{
	radius: 0.000
	flags: disable_parent_facing
}

animated.renderer:
{
	sprite:
	{
		texture: "wreck.trashcan"
	}
	z: 10.000
}

transform:
{

}

shipment:
{
	flags: keep_items, allow_withdraw, allow_deposit
}

loot.container:
{
	rolls: 2
	rolls_extra: 1

	tables:
	[
		"trashcan"
	]
}

interactable:
{
	window_size: [192.000, 192.000]
}

harvestable:
{
	resources:
	[
		{
			material: "scrap"
			quantity: 65.000
		}
		{
			material: "iron_plate"
			quantity: 3.000
		}
	]
}